<% items = [
  { label: "カレンダー",        bg: "bg-amber-200" },
  { label: "キャラクター変更",  bg: "bg-amber-100" },
  { label: "書き方に困ったら",  bg: "bg-amber-50" },
  { label: "アプリの使い方",    bg: "bg-cyan-50" },
  { label: "プロフィール設定",  bg: "bg-cyan-200" },
] %>

<!-- PC画面 -->
<div class="hidden md:flex md:flex-col md:h-screen mb-4">
  <% items.each do |item| %>
    <div class="flex-1 flex items-end mb-1 px-3 py-1 <%= item[:bg] %> drop-shadow-lg">
      <h3 class="text-lg font-bold text-gray-800"><%= item[:label] %></h3>
    </div>
  <% end %>
</div>
