<% items = [
  { label: "カレンダー",        bg: "bg-amber-200" },
  { label: "キャラクター変更",  bg: "bg-amber-100" },
  { label: "書き方に困ったら",  bg: "bg-amber-50" },
  { label: "アプリの使い方",    bg: "bg-cyan-50" },
  { label: "プロフィール設定",  bg: "bg-cyan-200" },
] %>

<% items.each do |item| %>
  <div class="h-1/5 mb-1 drop-shadow-lg flex items-end px-3 py-1 <%= item[:bg] %>">
    <p class="sm:text-xs md:text-base lg:text-xl font-bold text-gray-500"><%= item[:label] %></p>
  </div>
<% end %>