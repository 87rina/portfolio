<% items = [
  {
    label: "カレンダー(一覧)",
    bg: "bg-amber-200",
    icon: "calendar",
    logged_in_path: posts_path,
    guest_path: "#"
  },
  {
    label: "キャラクター変更",
    bg: "bg-amber-100",
    icon: "character",
    logged_in_path: "#",
    guest_path: "#"
  },
  {
    label: "書き方に困ったら",
    bg: "bg-amber-50",
    icon: "light",
   logged_in_path: "#",
    guest_path: "#"
  },
  {
    label: "アプリの使い方",
    bg: "bg-cyan-50",
    icon: "qestion",
    logged_in_path: "#",
    guest_path: "#"
  },
  {
    label: "プロフィール設定",
    bg: "bg-cyan-200",
    icon: "setting",
    logged_in_path: "#",
    guest_path: "#"
  }
] %>

<!-- スマホ画面 -->
<div class="block md:hidden grid grid-cols-5">
  <% items.each do |item| %>
    <% path = user_signed_in? ? item[:logged_in_path] : item[:guest_path] %>
    <%= link_to path, class: "#{item[:bg]} flex flex-col justify-center items-center p-2" do %>
      <%= inline_svg(item[:icon], class: "w-6 h-6 text-gray-700 hover:text-amber-600 my-2") %>
      <p class="text-[8px] text-gray-600"><%= item[:label] %></p>
    <% end %>
  <% end %>
</div>


<!-- PC画面 -->
<div class="hidden md:flex md:flex-col md:h-screen">
  <% items.each do |item| %>
    <% path = user_signed_in? ? item[:logged_in_path] : item[:guest_path] %>
    <%= link_to path, class: "#{item[:bg]} flex-1 flex items-end mb-1 drop-shadow-lg" do %>
      <h3 class="text-base lg:text-lg font-bold text-gray-700 hover:text-amber-600"><%= item[:label] %></h3>
      <%= inline_svg(item[:icon], class: "w-8 h-8 text-gray-700 ml-auto") %>
    <% end %>
  <% end %>
</div>
