<% items = [
  { label: "カレンダー　　",        bg: "bg-amber-200", icon: "calendar" },
  { label: "キャラクター変更",  bg: "bg-amber-100", icon: "character" },
  { label: "書き方に困ったら",  bg: "bg-amber-50", icon: "light" },
  { label: "アプリの使い方",    bg: "bg-cyan-50", icon: "qestion" },
  { label: "プロフィール設定",  bg: "bg-cyan-200", icon: "setting" },
] %>

<!-- スマホ画面 -->
<div class="block md:hidden grid grid-cols-5">
  <% items.each do |item| %>
    <button class=" <%= item[:bg] %> flex flex-col justify-center items-center p-1">
      <%= inline_svg(item[:icon], class: "w-6 h-6 text-gray-800 my-2") %>
      <p class="text-[8px] text-gray-800"><%= item[:label] %></p>
    </button>
  <% end %>
</div>


<!-- PC画面 -->
<div class="hidden md:flex md:flex-col md:h-screen mb-4">
  <% items.each do |item| %>
    <div class="flex-1 flex items-end mb-1 px-3 py-1 <%= item[:bg] %> drop-shadow-lg">
      <h3 class="text-base lg:text-lg font-bold text-gray-800"><%= item[:label] %></h3>
      <%= inline_svg(item[:icon], class: "w-8 h-8 text-gray-800 ml-auto") %>
    </div>
  <% end %>
</div>
