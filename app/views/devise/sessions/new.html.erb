<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg mx-40">
      <h1 class="text-2xl font-bold mb-6 text-gray-400">ログイン</h1> 
      <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "rounded-full mt-1 mb-6 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "rounded-full mt-1 mb-6 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <%= f.submit 'ログイン', class: "w-200 bg-orange-400 hover:bg-orange-600 text-white font-bold py-2 px-4 rounded-md shadow-md transition" %>
      <% end %>
      <div class='text-orange-400 hover:text-orange-600'>
        <%= link_to '新規登録はこちら', new_user_registration_path %>
        </div>
    </div>
  </div>
</div>