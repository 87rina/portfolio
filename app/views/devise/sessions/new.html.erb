<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg md:max-w-md mx-10">
      <h1 class="text-2xl text-center font-bold my-6 text-gray-600">ログイン</h1> 
      <%= form_with model: resource, url: session_path(resource_name), local: true do |f| %>
        <% if resource.errors.any? %>
          <ul class="mt-2 list-disc list-inside text-sm">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul> 
        <% end %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
          <%= f.email_field :email, class: "rounded-full mt-1 mb-6 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "rounded-full mt-1 mb-6 block w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>
        <div class="flex justify-center mb-4">
          <%= f.submit 'ログイン', class: "w-200 border-4 border-amber-300 hover:bg-amber-300 text-gray font-bold py-2 px-4 rounded-md shadow-md " %>
        </div>
        <% end %>
      <div class="text-center">
        <%= link_to '新規登録はこちら', new_user_registration_path, class: "text-amber-400 hover:text-amber-600 block" %>
        <%= link_to t("devise.passwords.new.forgot_your_password"), new_user_password_path, class: "text-amber-400 hover:text-amber-600 block" %>
        </div>
    </div>
  </div>
</div>