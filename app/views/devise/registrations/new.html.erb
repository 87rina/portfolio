<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg md:max-w-md mx-10">
      <h1 class="text-2xl text-center font-bold my-6 text-gray-600">新規登録</h1> 
      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
        <% if resource.errors.any? %>
          <ul class="mt-2 list-disc list-inside text-sm">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul> 
        <% end %>

        <div>
          <%= f.label :name, class: "text-sm font-medium text-gray-600" %>
          <%= f.text_field :name, class: "rounded-full mt-1 mb-6 w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>
        <div>
          <%= f.label :email, class: "text-sm font-medium text-gray-600" %>
          <%= f.email_field :email, class: "rounded-full mt-1 mb-6 w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>
        <div>
          <%= f.label :password, class: "text-sm font-medium text-gray-600" %>
          <% if @minimum_password_length %>
            <em class="text-sm">(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, class: "rounded-full mt-1 mb-6 w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, class: "rounded-full mt-1 mb-6 w-full px-3 py-2 border border-gray-300 shadow-sm focus:outline-none focus:ring-cyan-500 focus:border-cyan-500" %>
        </div>

        <div class="flex justify-center mb-4">
          <%= f.submit '登録', class: "w-200 border-4 border-amber-300 hover:bg-amber-300 text-gray font-bold mx-5 py-2 px-4 rounded-md shadow-md transition" %>

          <!-- LINEログイン -->
          <%= link_to user_line_omniauth_authorize_path,
                      data: { turbo: false },
                      class: "flex items-center mx-5 px-4 py-2 rounded-md text-white",
                      style: "background-color:#06C755" do %>
            <%= image_tag "btn_base.png", alt: "LINE Icon", class: "w-8 h-8 mr-2" %>
          ログイン
          <% end %>
        </div>
      <% end %>

      <div class="text-center">
        <%= link_to 'すでにアカウントをお持ちの方はこちら', new_user_session_path, class: "text-amber-400 hover:text-amber-600 block" %>
      </div>  
    </div>
  </div>
</div>