<div class="mx-10 my-4">
  <!-- ページトップ -->
  <div class="flex flex-col md:flex-row">
    <div class="md:order-1 md:w-1/4"> 
      <%= render "button" %>
    </div>
    <div class="order-1 md:order-2 md:w-2/4">
      <h1 class="text-2xl md:text-3xl lg:text-4xl mt-4 text-gray-600 text-center">あなたのポジティブ一覧</h1>
      <!-- 上部ページネーション -->
      <div class="flex justify-center items-center w-full my-2">
        <%= paginate @posts %>
      </div>    
    </div>
    <div class="order-2 md:order-3 md:w-1/4">
      <%= render "total" %>
    </div>
  </div>
  
  <!-- 記録一覧 -->
  <% if @posts.present? %>
  <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 w-full justify-center px-6 py-4">
    <%= render partial: "post", locals: { posts: @posts } %>
  <% else %>
    <div class="flex justify-center items-center w-full my-5">
      <div class="sm:text-sm md:text-xl lg:text-2xl text-center text-gray-600">
      記録がありません<br>今日のポジティブを記録しましょう！
      </div>
    </div>
  <% end %>
  </div>
  <!-- 下部ページネーション -->
  <div class="flex justify-center items-center w-full my-5">
    <%= paginate @posts %>
  </div> 
</div> 