<div class="mx-10 my-4">
  <!-- ページトップ -->
  <div class="flex flex-col md:flex-row">
    <div class="md:order-1 md:w-1/4"> 
      <%= render "button" %>
    </div>
    <div class="order-1 md:order-2 md:w-2/4">
      <h1 class="text-2xl md:text-3xl lg:text-4xl mt-4 text-gray-600 text-center">ポジティブ詳細</h1>
    </div>
  </div>
  <!-- 投稿詳細 -->
  <div class="flex justify-center mt-8">
    <h2 class="w-full max-w-md text-lg text-gray-700 border-b  border-gray-500 pb-2 mb-2"><%= l(@post.created_at, format: :short) %></h2>
  </div>
  <div class="flex justify-center mb-4">
    <div class="w-full  max-w-md text-center border-4 border-amber-400 rounded-md m-5 p-3">
      <p><%= @post.content %></p>
    </div>
  </div>
  <div class="flex justify-center mb-4">
    <div class="w-full  max-w-md text-center border-4 border-cyan-400 rounded-md m-5 p-3">
      <p><%= @ai_response.content %></p>
    </div>
  </div>
</div>
